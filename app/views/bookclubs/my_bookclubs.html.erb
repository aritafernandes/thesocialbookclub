<div class="container mt-5">
  <div class="d-flex justify-content-center mb-4">
    <h1>My Clubs</h1>
  </div>
  <div class="container">
    <div class="row d-flex justify-content-center mb-4">
      <% @my_bookclubs.each do |my_bookclub| %>
        <div class="cards col-12 border-2 rounded-3 my-3 shadow p-4 alig-items-center">
          <div class="text-end">
            <% if my_bookclub.bookclub_members.find_by(user: current_user).admin? %>
              <p class="text-muted mb-0">Host</p>
            <% end %>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <% if my_bookclub.photo.attached?%>
              <%= cl_image_tag my_bookclub.photo.key, height: 140, width: 140, class: "rounded-circle  shadow mb-3" %>
            <% end %>
            <div class="container justify-content-between">
              <div class="text-start mx-4 ">
                <h5><strong><%= my_bookclub.name %></strong></h5>
              </div>
              <p class="mx-4"> <%= my_bookclub.description %> </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
