<div class="container mt-5">
  <div class="d-flex justify-content-center mb-4">
    <h1> List of Bookclubs</h1>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <% @bookclubs.each do |bookclub| %>
        <% if bookclub.photo.attached?%>
          <div class=" cards col-10 border-2 rounded-3 my-3 shadow p-4">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <%= cl_image_tag bookclub.photo.key, height: 140, width: 140, class: "rounded-circle  shadow mb-3" %>
              </div>
              <div class="content m-4" style="overflow-y: scroll; max-height: 300px;">
                <h3><strong><%= bookclub.name %></strong></h3>
                  <div class="content-text m-4">
                    <%= bookclub.description %>
                  </div>
              </div>
              <div class="button">
                Join
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
