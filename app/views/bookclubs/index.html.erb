<div class="container mt-5">
  <div data-controller="search-bookclubs">
    <div class="d-flex justify-content-center mb-4">
      <h1> List of Bookclubs</h1>
    </div>
    <div class="container">
      <div class="row d-flex justify-content-center mb-4">
        <div class="col-6">
          <%= form_with url: bookclubs_path, method: :get, html: {class:"flex-grow-1 mb-4", data: {search_bookclubs_target: "form"}} do |f| %>
            <%= f.text_field  :query,
                              class: "form-control rounded-pill",
                              placeholder: "Search by Club Name and Genre",
                              value: params[:query],
                              autocomplete: :off,
                              data: {search_bookclubs_target: "input",
                              action: "keyup->search-bookclubs#update"}
            %>
          <% end %>
        </div>
      <div>
    </div>
    <div data-search-bookclubs-target="list">
      <%= render partial: 'bookclubs/list', locals: { books: @bookclubs } %>
    </div>
  </div>
</div>
