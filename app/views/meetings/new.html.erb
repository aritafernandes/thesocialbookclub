
<div class="text-center pt-5">
   <h2><strong>Create a meeting<strong></h2>
</div>
<div class="w-60 my-5 d-flex justify-content-center">
   <div class="card p-4">
      <%= simple_form_for [@bookclub, @meeting] do |f| %>
      <%= f.input :book_id, collection: Book.all, label_method: lambda {|book| "#{book.author} - #{book.title}"}, prompt: "Search books by title" %>
      <%= f.input :date_time, as: :datetime, html5: true  %>
      <%= f.input :video_link %>
      <%= f.input :location %>
      <div class="d-flex justify-content-around">
         <%= f.submit "Create meeting", class: "button btn btn-light"%>
      </div>
      <% end %>
   </div>
</div>
