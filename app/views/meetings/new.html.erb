<div class="row justify-content-center">
  <div class="my-5 col-6">
    <div class="cards p-4" data-controller="book-autocomplete">
      <div class="text-center mb-4">
        <h2>Create a new meeting</h2>
      </div>
      <%= simple_form_for [@bookclub, @meeting], html: { class: 'mb-5' } do |f| %>
        <div class="mb-3">
          <label class="form-label" for="meeting_book_id">Book</label>
          <div class="d-flex flex-row justify-content-between align-items-center">
            <select name="meeting[book_id]" data-book-autocomplete-target="searchInput"
          placeholder="Search by title or author" class="form-select"></select>
          </div>
        </div>
        <%= f.input :date_time, label: "Meeting date", as: :datetime, html5: true  %>
        <%= f.input :video_link, label: "Virtual meeting link"%>
        <%= f.input :location, label: "Meeting location" %>
        <div class="d-flex justify-content-around">
          <%= f.submit "Create meeting", class: "button btn btn-light"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
