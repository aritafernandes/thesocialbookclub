<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", class: "w-100 ms-2" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link mx-4" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Join a bookclub", bookclubs_path(@bookclub), class: "join-link nav-link mx-4" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Find a Book", books_path, class: "nav-link mx-4" %>
          </li>
          <li class="nav-item active">
            <%= link_to "My Clubs", my_bookclubs_path, class: "nav-link mx-4" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if current_user.photo.attached?%>
            <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :fill, gravity: :face, class: "avatar", alt: "dropdown menu" %>
          <% else %>
            <%= image_tag "https://www.seekpng.com/png/full/110-1100707_person-avatar-placeholder.png", class: "avatar", alt: "dropdown menu" %>
          <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link mx-4" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Join a Bookclub", bookclubs_path(@bookclub), class: "join-link nav-link mx-4" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Find a Book", books_path, class: "nav-link mx-4" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link mx-4" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path,style: "padding: 8px 24px", class: "button nav-link mx-4 shadow" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
